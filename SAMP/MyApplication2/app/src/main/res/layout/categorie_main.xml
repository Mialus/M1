<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/back2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Quelle catÃ©gorie choisissez-vous ?"
        android:id="@+id/titre1"
        android:layout_centerHorizontal="true"
        android:textColor="#ff6a00"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RETOUR"
        android:id="@+id/retour"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ff6a00"
        android:background="@null"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RAFFRAICHIR"
        android:id="@+id/refresh"
        android:textColor="#ff6a00"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/titre1" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listeViewCategorie"
        android:layout_below="@+id/titre1"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/retour" />


</RelativeLayout>