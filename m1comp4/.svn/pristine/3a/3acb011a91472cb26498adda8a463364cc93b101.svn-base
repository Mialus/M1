    public void onInstruction(MemoireMiniJaja memoire, int ligne) {

        if(this.pasapas) {

        	int i = 0;
        	int j = 0;
        	int indexOf = 0;
        	
        	String texte = "";
        	texte += memoire.toString();
        	ajouterOngletMemoire("Mémoire courante", texte);
        	System.out.println("ligne : " + ligne);
        	
        	while(j < ligne) {
        		if(i < this.miniJajaText.length()) {
        			if(this.miniJajaText.charAt(i) == '\n') j++;
        		}
        		i++;
        	}
        	System.out.println("index instr : " + i);
        	this.miniJajaSaisie.setSelectionStart(i);
        	this.miniJajaSaisie.setSelectionEnd(i + 20);
        	
            synchronized (this.threadInterpration) {

            	try {
                    this.threadInterpration.wait();
                }
                catch (InterruptedException e) {
                    System.out.println(e.getMessage());
                }
            }
        }
    }

    public void ajouterOngletMemoire(String nom, String texte) {
        JScrollPane nouvelOnglet = new JScrollPane();
        JTextPane texteMemoire = new JTextPane();
        nouvelOnglet.setName(nom);
        texteMemoire.setText(texte);
        nouvelOnglet.setViewportView(texteMemoire);
        this.ongletsMemoire.add(nouvelOnglet);
    }

    public void analyserProgramme() {

        System.out.println("JavaCC Parser:  Reading from file " + this.miniJajaPath + " . . .");

        this.threadInterpration = new ThreadInterpretation(this.visiteurInterpretation);

        if(!this.mjjInitialiser) {
            try {
                this.parser = new MiniJaja(new java.io.FileInputStream(this.miniJajaPath));
                this.mjjInitialiser = true;
            } catch (java.io.FileNotFoundException e) {
                System.out.println("JavaCC Parser:  File " + this.miniJajaPath + " not found.");
                return;
            }
        }
        else {
            try {
                parser.ReInit(new java.io.FileInputStream(this.miniJajaPath));
            }
            catch (java.io.FileNotFoundException e) {
                System.out.println("JavaCC Parser:  File " + this.miniJajaPath + " not found.");
                return;
            }
        }

        ///////////
        //ANALYSE//
        ///////////
        try {
            this.arbreMiniJaja = this.parser.classe();
            this.threadInterpration.setNoeud(this.arbreMiniJaja);

            this.analyseTexteAffichage.setText(this.arbreMiniJaja.dump(""));
            this.analyseTexteAffichage.append("JavaCC Parser:  Java program parsed successfully.");
        }
        catch (ParseException e) {
            this.analyseTexteAffichage.setText(e.getMessage());
            this.analyseTexteAffichage.append("JavaCC Parser:  Encountered errors during parse.");
        }
    }

    public void compilerProgramme() {
        ///////////////
        //COMPILATION//
        ///////////////
        try
        {
            this.jajaCode = (Paire)this.arbreMiniJaja.jjtAccept(visiteurCompilation, 1);    //On commence à la ligne n = 1
            this.jajaCodeTextAffichage.setText(this.jajaCode.getInstructions());
        } catch(MiniJajaException e) {
            System.out.println("MiniJajaException :  " + e.getMessage());
        }
    }


    public void executerProgramme() {

        analyserProgramme();
        compilerProgramme();

        //////////////////
        //INTERPRETATION//
        //////////////////
        this.ongletsMemoire.removeAll();
        this.threadInterpration.start();
    }


